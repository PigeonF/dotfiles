[delta]
    navigate = true
    line-numbers = true
    hyperlinks = true
    features = decorations

[delta "decorations"]
    commit-style = raw
    file-style = omit
    hunk-header-style = file line-number syntax

[stgit "edit"]
    verbose = true

[stgit "alias"]
    l = series -d
    list = series -d

[branchless "core"]
    mainBranch = "main"

[branchless "test"]
    strategy = worktree
    jobs = 0

[branchless "next"]
    interactive = true
