{
    // cspell:words Sysnative windir
    // cspell:words Cartograph Consolas dprint Nushell stylua
    // cspell:words cheshirekow jnoortheen JohnnyMorganz
    "[lua]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua"
    },
    "[json][jsonc][markdown][toml]": {
        "editor.defaultFormatter": "dprint.dprint"
    },
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide"
    },
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",
    "nix.serverSettings": {
        "nil": {
            "formatting": {
                "command": [
                    "nixfmt"
                ]
            }
        }
    },
    "editor.fontFamily": "Cartograph CF, Consolas, 'Courier New', monospace",
    "editor.rulers": [
        100
    ],
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "terminal.integrated.defaultProfile.windows": "NuShell",
    "terminal.integrated.profiles.windows": {
        "Command Prompt": {
            "args": [],
            "icon": "terminal-cmd",
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ]
        },
        "JavaScript Debug Terminal": null,
        "Nushell": null,
        "NuShell": {
            "path": [
                "${env:SCOOP}\\shims\\nu.exe"
            ]
        },
        "PowerShell": {
            "icon": "terminal-powershell",
            "source": "PowerShell"
        }
    },
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "extensions.ignoreRecommendations": true,
    "redhat.telemetry.enabled": false,
    "editor.formatOnSave": true,
    "remote.SSH.remotePlatform": {
        "Hesperidium": "linux",
        "nixbox": "linux",
        "gitlab-runner": "linux"
    },
    "json.schemas": [
        {
            "fileMatch": [
                "CMakePresets.json",
                "CMakeUserPresets.json"
            ],
            "url": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json"
        }
    ],
    "cmake.languageSupport.enableFileAPI": true,
    "[cmake]": {
        "editor.defaultFormatter": "cheshirekow.cmake-format"
    },
    "workbench.sideBar.location": "right",
    "workbench.settings.applyToAllProfiles": [],
    "gitlab.aiAssistedCodeSuggestions.enabled": false,
    "gitlab.duoChat.enabled": false,
    "window.zoomLevel": 1,
    "files.associations": {
        ".vscode/*.json": "jsonc",
        "*.just": "just",
        "dep5": "debian-copyright",
        "*.json5": "jsonc"
    },
    "yaml.customTags": [
        "!reference sequence"
    ],
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
